{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "../dist",
        "rootDir": ".",
        "baseUrl": ".",
        "noEmit": true,
        "paths": {
            "#utils": ["utils/index"],
            "#routes": ["routes/index"],
            "#functions": ["utils/functions"],
            "#types": ["types/index"],
            "#lib/*": ["lib/*"],
            "#root/*": ["*"]
        }
    },
    "include": ["."]
}
